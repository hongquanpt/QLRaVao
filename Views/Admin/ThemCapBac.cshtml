@{
    ViewBag.Title = "ThemCapBac";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var dscb = (List<QuanLyRaVao.Models.Capbac>)ViewBag.dscb;
    //var ds2 = (List<QuanLyRaVao.Models.Hangsanxuat>)ViewBag.dshang;
}

<div class="content-wrapper">
    <!-- Begin Page Content -->
 
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thêm thông tin Cấp bậc</h3>
                        </div>

                    </div>
                </div>
            </div>
            <form class="was-validated" method="post" action="/Admin/ThemCapBac" enctype="multipart/form-data" id="frmThemCB">
                <div class="card-body">
                    <div class="form-group">
                        <label for="uname">Tên Câp bậc:</label>
                        <input type="text" class="form-control" id="tenCB" placeholder="Nhập tên cấp bậc" name="CapBac" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Vui lòng điền vào trường này.</div>

                    </div>
                    <div class="form-group">
                        <label for="pwd">Kí hiệu:</label>
                        <input type="text" class="form-control" id="KH" placeholder="Nhập Kí hiệu cấp bậc" name="KyHieu" required>
                        <div class="invalid-feedback">Vui lòng điền vào trường này.</div>
                    </div>
                </div>
            <button type="submit" class="btn btn-primary" id="comfirm" onclick="Them()">Thêm mới</button>
            <button type="submit" class="btn btn-primary" id="cancel">Hủy</button>
            </form>
        </div>
</div>

<script>
    function Them() {
       
        $('#confirm').on('click', function () {
            var tenCB = $('#tenCB').val().toString();
            var KH = $('#KH').val().toString();
            if (tenCB.trim() === "" || KH.trim() === "") {
                // Kiểm tra nếu trường TenHang rỗng
                alert("Bạn chưa nhập đủ thông tin.");
            } else {
                // Nếu trường TenHang không rỗng, tiến hành gửi yêu cầu AJAX
                $.ajax({
                    url: '/Admin/ThemCapBac',
                    data: {
                        tenCB:tenCB,
                        KH:KH
                    },
                    type: 'POST',
                    dataType: 'json',
                    success: function (res) {
                        if (res.status == true) {                        
                            window.location = '@Url.Action("QuanLyCapBac","Admin")';
                        }
                    }
                });
            }
        });
        $('#cancel').on('click', function () {
            window.location = '@Url.Action("QuanLyCapBac","Admin")';
        });
    }
</script>


