@{
    ViewBag.Title = "QuanLyCapBac";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var dscb = (List<QuanLyRaVao.Models.Capbac>)ViewBag.dscb;
}
<div>
    <div class="content-wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">DataTable with minimal features & hover style</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã quân nhân</th>
                                            <th>Cấp bậc</th>
                                            <th>Kí hiệu</th>
                                            <th>Ghi chú</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in dscb)
                                        {
                                            <tr>
                                                <td>@item.MaCapBac</td>
                                                <td>@item.CapBac1</td>
                                                <td>@item.KyHieu</td>
                                                <td></td>
                                                <td>
                                                    <a href="@Url.Action("SuaCapBac","Admin",new { maCB = item.MaCapBac})" class="btn btn-success">Edit</a>
                                                    <a href="#" class="btn btn-app" title="Delete" data-toggle="modal" onclick="XoaCapBac(@item.MaCapBac)"><i class="material-icons"></i>Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>XXXXXXXXXXXXx</th>
                                            <th>XXXXXXXXXXXXx</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                 
                            <a type="button" class="btn btn-primary" href="@Url.Action("ThemCapBac","Admin")" data-dismiss="modal" id="confirmThem">Thêm cấp bậc mới</a>
                        </h3>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
    </div>
</div>

<!--Thêm cấp bậc -->
<!-- Đoạn mã HTML cho modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Bạn có chắc chắn muốn xóa cấp bậc?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirmDeleteButton">Xóa</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
<!-- Đoạn mã JavaScript để xử lý sự kiện xóa -->
<script>
    function XoaCapBac(ma) {
        var maCB = parseInt(ma);

        // Hiển thị modal xác nhận xóa
        $('#confirmDeleteModal').modal('show');

        // Xử lý sự kiện khi người dùng xác nhận xóa
        $('#confirmDeleteButton').on('click', function () {
            $.ajax({
                url: '/Admin/XoaCapBac',
                data: {
                    maCB: maCB
                },
                type: 'POST',
                dataType: 'json',
                success: function (res) {
                    if (res.status == true) {
                        // Đóng modal sau khi xóa thành công
                        $('#confirmDeleteModal').modal('hide');
                        window.location = '@Url.Action("QuanLyCapBac","Admin")';
                    }
                }
            });
        });
    }
</script>
