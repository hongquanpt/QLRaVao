@{
    ViewBag.Title = "QuanLyCapBac";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var dscb = (List<QuanLyRaVao.Models.Capbac>)ViewBag.dscb;
}
<div>
    <div class="content-wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">DataTable with minimal features & hover style</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã quân nhân</th>
                                            <th>Cấp bậc</th>
                                            <th>Kí hiệu</th>
                                            <th>Ghi chú</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in dscb)
                                        {
                                            <tr>
                                                <td>@item.MaCapBac</td>
                                                <td>@item.CapBac1</td>
                                                <td>@item.KyHieu</td>
                                                <td></td>
                                                <td>
                                                    <a href="#" class="btn btn-app" title="Settings" data-toggle="modal" id="viewbtn" data-target="#sua"><i class="fas fa-edit"></i>Edit</a>
                                                    <a href="#" class="btn btn-app" title="Delete" data-toggle="modal" onclick="XoaHang(@item.MaCapBac)"><i class="material-icons"></i>Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>XXXXXXXXXXXXx</th>
                                            <th>XXXXXXXXXXXXx</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
    </div>
</div>

<!--Thêm cấp bậc -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Quản lý cấp bậc  
            <a type="button" class="btn btn-primary" href=" 
                @Url.Action("ThemCapBac","Admin")" data-dismiss="modal" id="confirmThem">Thêm cấp bậc mới</a></h3>
    </div>
