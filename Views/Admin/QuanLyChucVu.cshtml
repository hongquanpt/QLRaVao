@model X.PagedList.IPagedList<QuanLyRaVao.Models.Chucvu>
@using System.Text.Json
@using QuanLyRaVao.authorize
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";   
    List<AccountRole> data = HttpContextAccessor.HttpContext.Session.GetJson<List<AccountRole>>("QuyenTK") ?? new List<AccountRole>();
    var qh = data.FirstOrDefault(c => c.ActionName == "QuanLyChucVu");
}
@if (qh == null)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Full Screen Alert</title>
        <style>
            body {
                margin: 0;
                font-family: Arial, sans-serif;
            }

            .fullscreen-alert {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                align-items: center;
                justify-content: center;
                color: #fff;
                text-align: center;
                z-index: 1000;
            }

            .alert-content {
                background-color: #343a40;
                padding: 20px;
                border-radius: 8px;
            }

            .close-btn {
                cursor: pointer;
                color: #fff;
                font-size: 20px;
                position: absolute;
                top: 10px;
                right: 10px;
            }
        </style>
    </head>
    <body>

        <div class="fullscreen-alert" id="fullscreenAlert">
            <div class="alert-content">
                <span class="close-btn" onclick="closeFullscreenAlert()">&times;</span>
                <h1>Truy cập thất bại</h1>
                <p>Bạn không có quyền truy cập trang này. Vui lòng liên hệ với chúng tôi để nhận hỗ trợ </p>
            </div>
        </div>

        <script>
            function showFullscreenAlert() {
                document.getElementById('fullscreenAlert').style.display = 'flex';
            }

            function closeFullscreenAlert() {
                document.getElementById('fullscreenAlert').style.display = 'none';
            }

            // Gọi hàm này khi trang web được tải
            document.addEventListener('DOMContentLoaded', function () {
                showFullscreenAlert();
            });
        </script>

    </body>
    </html>


}
else
{

    <div>
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Quản lý chức vụ</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Mã chức vụk</th>
                                                <th>chức vụ</th>
                                                <th>Kí hiệu</th>
                                                <th>Ghi chú</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.MaCv</td>
                                                    <td>@item.TenCv</td>
                                                    <td>@item.KyHieu</td>
                                                    <td></td>
                                                    <td>
                                                        <a href="@Url.Action("SuaChucVu","Admin",new { macv = item.MaCv})" class="btn btn-success">Edit</a>
                                                        <a href="#" class="btn btn-success" onclick="XoaChucVu(@item.MaCv)">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                        </tfoot>
                                    </table>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-5">
                                            <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                                Danh sách từ @ViewBag.PageStartItem đến @ViewBag.PageEndItem trên tổng số @ViewBag.TotalItemCount chức vụ
                                            </div>
                                        </div>
                                        <ul class="pagination">

                                            @if (Model.HasPreviousPage)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("QuanLyChucVu", new { page = Model.PageNumber - 1 })">Previous</a>
                                                </li>

                                            }
                                            <li class="page-item  @(1 == Model.PageNumber ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("QuanLyChucVu", new { page = 1 })">1</a>
                                            </li>
                                            @if (Model.PageNumber > 3)
                                            {
                                                <li class="page-item">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            @for (int i = Model.PageNumber - 1; i <= Model.PageNumber + 1; i++)
                                            {
                                                if (i > 1 && i < Model.PageCount)
                                                {
                                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                                        <a class="page-link" href="@Url.Action("QuanLyChucVu", new { page = i })">@i</a>
                                                    </li>
                                                }
                                            }
                                            @if (Model.PageNumber < Model.PageCount - 1)
                                            {
                                                <li class="page-item">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            @if (Model.PageCount > 1)
                                            {
                                                <li class="page-item  @(Model.PageCount == Model.PageNumber ? "active" : "")">
                                                    <a class="page-link" href="@Url.Action("QuanLyChucVu", new { page = Model.PageCount })">@Model.PageCount</a>
                                                </li>
                                            }
                                            @if (Model.HasNextPage)
                                            {

                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("QuanLyChucVu", new { page = Model.PageNumber + 1 })">Next</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button class="btn btn-primary" data-dismiss="modal" id="confirmThem" onclick="Them()">Thêm chức vụ mới</button>
                                    @*<a href="#" class="btn btn-secondary" style="display: none;"><i class="material-icons">&#xE24D;</i> <span>Xuất Excel</span></a>*@
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <form id="frmThemCV" method="post" aria-hidden="true" tabindex="-1" role="dialog" style="display: none;" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Nhập cấp chức vụ</label>
                        <input type="text" class="form-control" id="cap" placeholder="Nhập cấp chức vụ mới tại đây">
                        <label for="exampleInputPassword1">Nhập tên chức vụ</label>
                        <input type="text" class="form-control" id="tendv" placeholder="Nhập tên chức vụ mới tại đây">
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" id="confirm">Thêm chức vụ</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">Hủy bỏ</button>
                    </div>
                </div>
            </form>
        </div>
        <script>
            function Them() {
                var form = document.getElementById("frmThemCV");
                form.setAttribute("aria-hidden", "false");
                form.setAttribute("tabindex", "0");
                form.style.display = "block";
                $('#confirm').on('click', function () {
                    var tendv = $('#tendv').val().toString();
                    var cap = $('#tendv').val().toString();

                    if (tendv.trim() === "" || cap.trim() === "") {
                        // Kiểm tra nếu trường TenDM rỗng
                        alert("Bạn chưa nhập đủ thông tin chức vụ.");
                    } else {
                        // Nếu trường TenDM không rỗng, tiến hành gửi yêu cầu AJAX
                        $.ajax({
                            url: '/Admin/ThemChucVu', // Điều chỉnh URL nếu cần thiết
                            data: {
                                TenCv: tendv,
                                KH: cap
                            },
                            type: 'POST',
                            dataType: 'json',
                            success: function (res) {
                                if (res.status == true) {
                                    // Đóng modal sau khi thêm thành công
                                    form.setAttribute("aria-hidden", "true");
                                    form.setAttribute("tabindex", "-1");
                                    form.style.display = "none";
                                    window.location = '@Url.Action("QuanLyChucVu","Admin")';
                                }
                            }
                        });
                    }
                });
                $('#cancel').on('click', function () {
                    form.setAttribute("aria-hidden", "true");
                    form.setAttribute("tabindex", "-1");
                    form.style.display = "none";
                });
            }
        </script>

        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteModalLabel">Bạn có chắc chắn muốn xóa chức vụ?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="confirmDeleteButton">Xóa</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Đoạn mã JavaScript để xử lý sự kiện xóa -->
        <script>
            function XoaChucVu(madv) {
                var madv = parseInt(madv);

                // Hiển thị modal xác nhận xóa
                $('#confirmDeleteModal').modal('show');

                // Xử lý sự kiện khi người dùng xác nhận xóa
                $('#confirmDeleteButton').on('click', function () {
                    $.ajax({
                        url: '/Admin/XoaChucVu',
                        data: {
                            macv: madv
                        },
                        type: 'POST',
                        dataType: 'json',
                        success: function (res) {
                            if (res.status == true) {
                                // Đóng modal sau khi xóa thành công
                                $('#confirmDeleteModal').modal('hide');
                                window.location = '@Url.Action("QuanLyChucVu","Admin")';
                            }
                        }
                    });
                });
            }
        </script>
    </div>


}

